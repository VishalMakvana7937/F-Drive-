<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product View</title>
</head>

<body>
    <h1>Product View</h1>

    <table class="text-center" width="1000px" cellspacing="2" cellpadding="1" border="1">
        <thead>
            <tr>
                <th>No.</th>
                <th>Id.</th>
                <th>Name</th>
                <th>Rate</th>
                <th>Category</th>
                <th>Delet</th>
            </tr>
        </thead>
        <tbody>
            <% pro.forEach((product, index)=> { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td>
                    <td>
                        <%= product._id %>
                    </td>
                    <td>
                        <%= product.productname %>
                    </td>
                    <td>
                        <%= product.rate %>
                    </td>
                    <td>
                        <%= product.category %>
                    </td>
                    <td>
                        <form action="/delete/<%= product._id %>" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</body>

</html>